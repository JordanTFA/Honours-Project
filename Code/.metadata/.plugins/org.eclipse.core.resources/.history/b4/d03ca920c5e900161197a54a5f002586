	public static String readFile() throws IOException{
		
		s = new FileInputStream("src\\Corpus.txt");
		r = new InputStreamReader(s);
		
		int data = r.read();
		String paragraph = "";
		
		while(data != -1){
			char c = (char) data;		
			paragraph += c;
			data = r.read();			
		}
		return paragraph;
	}

	public static String[] splitIntoWords(String paragraph){
		
		words = paragraph.split("\\s+");
		for(int i = 0; i < words.length; i++){
			words[i] = words[i].replaceAll("[^\\w]", "");
		}
		
		return words;
	}
	
	public static void countOcc(String[] words){
		String wordToCount = "am";
	}
	
	public static void replaceWords(String[] words){
		
		String wordToReplace = "Sam";
		
		for(int i = 0; i < words.length; i++){
			words[i] = words[i].replaceAll(wordToReplace, "");
			
			System.out.print(words[i] + " ");
		}
		
	}
}
